<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".About">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="300dp" android:layout_height="300dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:layout_marginTop="76dp"
                                                  app:layout_constraintHorizontal_bias="0.488"
                                                  android:src="@drawable/ubuntu"
                                                  android:id="@+id/circleImageView"/>
    <TextView
            android:text="@string/rojikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_name"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/circleImageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_email"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="16sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>